#!/bin/sh

set -eu pipefail

cd daiv/

django-admin compilemessages --ignore=.venv
django-admin migrate --noinput
django-admin setup_webhooks --base-url http://gitlab:8929 --disable-ssl-verification
django-admin update_index

exec uvicorn --host 0.0.0.0 --port 8000 --ssl-keyfile /home/app/src/data/certs/cert.key --ssl-certfile /home/app/src/data/certs/cert.crt --reload --reload-include 'templates/**/*.html' "daiv.asgi:application"
